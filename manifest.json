{
  "manifest_version": 3,
  "name": "ChatGPT Pin Extension",
  "description": "Pin and unpin ChatGPT messages with ease.",
  "version": "1.0",
  "action": {
    "default_icon": {
      "16": "icons/logo.png",
      "32": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.svg",
        "details.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}