{
  "manifest_version": 3,
  "name": "ChatGPT Pin Extension",
  "description": "A very simple Chrome extension starter.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
